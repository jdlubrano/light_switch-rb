<h4>Switches</h4>

<% flash.each do |key, msg| %>
  <p class="<%= key %>"><%= msg %></p>
<% end %>

<table id="switches" class="u-full-width">
  <thead>
    <th>Name</th>
    <th>State</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th><!-- Actions --></th>
  </thead>
  <tbody>
    <%= render @switches %>
  </tbody>
</table>

<div id="new-switch">
  <%= render "form", switch: @switch %>
</div>
